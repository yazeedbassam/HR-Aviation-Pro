{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "SupabaseConnection": "Host=${SUPABASE_HOST};Database=${SUPABASE_DB};Username=${SUPABASE_USER};Password=${SUPABASE_PASSWORD};Port=5432;SSL Mode=Require;Trust Server Certificate=true;"
  },
  "AllowedHosts": "*",
  "Supabase": {
    "Url": "${SUPABASE_URL}",
    "Key": "${SUPABASE_ANON_KEY}"
  },
  "EmailSettings": {
    "SmtpServer": "${EMAIL_SMTP_SERVER}",
    "SmtpPort": 587,
    "Username": "${EMAIL_USERNAME}",
    "Password": "${EMAIL_PASSWORD}",
    "FromEmail": "${EMAIL_FROM}",
    "FromName": "HR Aviation System",
    "EnableSsl": true,
    "Timeout": 30000,
    "MaxRetries": 3,
    "RetryDelay": 1000,
    "EnableLogging": true
  },
  "HealthChecks": {
    "Database": {
      "Enabled": true,
      "Timeout": 30
    }
  },
  "CacheSettings": {
    "EnableCache": true,
    "DefaultExpirationMinutes": 20,
    "MaxCacheSize": 1000,
    "EnableStatistics": true,
    "EnableLogging": true
  }
} 