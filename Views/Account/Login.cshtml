        .aircraft-1::after {
            content: '';
            position: absolute;
            top: 50%;
            right: -50px;
            width: 50px;
            height: 2px;
            background: linear-gradient(to left, rgba(255, 255, 255, 0.7), transparent);
            z-index: -1;
        }

        .aircraft-2::after {
            content: '';
