                panels.forEach(p => p.classList.remove('active'));
                if (panelsContainer) {
                    panelsContainer.classList.remove('active');
                    panelsContainer.setAttribute('aria-hidden', 'true');
                }
            }

            panelTriggers.forEach(trigger => {
                trigger.addEventListener('click', () => {
                    const panelId = trigger.getAttribute('data-panel');
                    const targetPanel = document.getElementById(panelId);
                    if (targetPanel && panelsContainer) {
                        closeAllPanels(); // Close any open panel first
                        targetPanel.classList.add('active');
                        panelsContainer.classList.add('active');
                        panelsContainer.setAttribute('aria-hidden', 'false');
                        targetPanel.focus(); // Focus the panel for accessibility
                    }
                });

                // Add keyboard accessibility for triggers
                trigger.addEventListener('keydown', (event) => {
                    if (event.key === 'Enter' || event.key === ' ') {
                        event.preventDefault();
                        trigger.click();
                    }
                });
            });

            closeButtons.forEach(button => {
                button.addEventListener('click', closeAllPanels);
            });

            if (overlay) {
                overlay.addEventListener('click', closeAllPanels);
            }

            // Close panel with Escape key
            document.addEventListener('keydown', (event) => {
                if (event.key === 'Escape' && panelsContainer && panelsContainer.classList.contains('active')) {
                    closeAllPanels();
                }
            });

            // Check for reduced motion preference
            const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
            if (prefersReducedMotion) {
                document.body.classList.add('reduced-motion');
            }
            
            // ===== MOBILE RESPONSIVE ENHANCEMENTS =====
            
            // Handle mobile orientation changes
            function handleOrientationChange() {
                const isLandscape = window.innerHeight < window.innerWidth;
                const isMobile = window.innerWidth <= 767;
                
                if (isMobile && isLandscape) {
                    document.body.classList.add('mobile-landscape');
                } else {
                    document.body.classList.remove('mobile-landscape');
                }
            }
            
            // Handle viewport changes
            function handleViewportChange() {
                const isMobile = window.innerWidth <= 767;
                const isTablet = window.innerWidth <= 991 && window.innerWidth > 767;
                
                // Adjust form layout for mobile
                if (isMobile) {
                    const form = document.getElementById('loginForm');
                    if (form) {
                        form.classList.add('mobile-form');
                    }
                    
                    // Hide aircraft animations on mobile for better performance
                    const aircraftContainer = document.querySelector('.animated-aircraft-container');
                    if (aircraftContainer) {
                        aircraftContainer.style.display = 'none';
                    }
                } else if (isTablet) {
                    // Show aircraft on tablet but adjust positions
                    const aircraftContainer = document.querySelector('.animated-aircraft-container');
                    if (aircraftContainer) {
                        aircraftContainer.style.display = 'block';
                    }
                }
                
                // Adjust logo size based on screen size
                const logoIcon = document.querySelector('.aviation-logo-icon');
                if (logoIcon) {
                    if (isMobile) {
                        logoIcon.style.width = '60px';
                        logoIcon.style.height = '60px';
                    } else if (isTablet) {
                        logoIcon.style.width = '80px';
                        logoIcon.style.height = '80px';
                    } else {
                        logoIcon.style.width = '100px';
                        logoIcon.style.height = '100px';
                    }
                }
            }
            
            // Handle touch events for mobile
            function handleTouchEvents() {
                const isTouchDevice = 'ontouchstart' in window || navigator.maxTouchPoints > 0;
                
                if (isTouchDevice) {
                    // Add touch-friendly styles
                    document.body.classList.add('touch-device');
                    
                    // Improve button touch targets
                    const buttons = document.querySelectorAll('button, .btn, .side-menu-item');
                    buttons.forEach(button => {
                        button.style.minHeight = '44px';
                        button.style.minWidth = '44px';
                    });
                    
                    // Add touch feedback
                    buttons.forEach(button => {
                        button.addEventListener('touchstart', function() {
                            this.style.transform = 'scale(0.95)';
                        });
                        
                        button.addEventListener('touchend', function() {
                            this.style.transform = 'scale(1)';
                        });
                    });
                }
            }
            
            // Handle form submission on mobile
            function handleMobileForm() {
                const form = document.getElementById('loginForm');
                const databaseSelect = document.getElementById('databaseType');
                
                if (form && databaseSelect) {
                    form.addEventListener('submit', function(e) {
                        const selectedValue = databaseSelect.value;
                        
                        if (!selectedValue) {
                            e.preventDefault();
                            alert('Please select a database connection type');
                            databaseSelect.focus();
                            return false;
                        }
                        
                        // Show loading state on mobile
                        const submitBtn = this.querySelector('.btn-submit');
                        if (submitBtn) {
                            submitBtn.textContent = 'Signing In...';
                            submitBtn.disabled = true;
                        }
                    });
                }
            }
            
            // Initialize mobile enhancements
            function initMobileEnhancements() {
                handleOrientationChange();
                handleViewportChange();
                handleTouchEvents();
                handleMobileForm();
                
                // Add event listeners
                window.addEventListener('orientationchange', handleOrientationChange);
                window.addEventListener('resize', handleViewportChange);
                
                // Handle virtual keyboard on mobile
                if ('visualViewport' in window) {
                    window.visualViewport.addEventListener('resize', function() {
                        const currentHeight = this.height;
                        const windowHeight = window.innerHeight;
                        
                        if (currentHeight < windowHeight) {
                            // Virtual keyboard is open
                            document.body.classList.add('keyboard-open');
                        } else {
                            // Virtual keyboard is closed
                            document.body.classList.remove('keyboard-open');
                        }
                    });
                }
            }
            
            // Initialize when DOM is ready
            initMobileEnhancements();
            
            // ===== ENHANCED MOBILE EXPERIENCE =====
            
            // Handle form validation with visual feedback
            function enhanceFormValidation() {
                const form = document.getElementById('loginForm');
                const inputs = form.querySelectorAll('input, select');
                
                inputs.forEach(input => {
                    // Add visual feedback on input
                    input.addEventListener('input', function() {
                        this.classList.remove('error', 'success');
                        
                        if (this.value.trim() !== '') {
                            this.classList.add('success');
                        }
                    });
                    
                    // Add focus effects
                    input.addEventListener('focus', function() {
                        this.parentElement.classList.add('focused');
                    });
                    
                    input.addEventListener('blur', function() {
                        this.parentElement.classList.remove('focused');
                        
                        // Validate on blur
                        if (this.hasAttribute('required') && this.value.trim() === '') {
                            this.classList.add('error');
                            showError(this, 'This field is required');
                        } else if (this.classList.contains('error')) {
                            this.classList.remove('error');
                            hideError(this);
                        }
                    });
                });
            }
            
            // Show error message
            function showError(input, message) {
                hideError(input);
                
                const errorDiv = document.createElement('div');
                errorDiv.className = 'error-message';
                errorDiv.textContent = message;
                
                input.parentElement.appendChild(errorDiv);
            }
            
            // Hide error message
            function hideError(input) {
                const existingError = input.parentElement.querySelector('.error-message');
                if (existingError) {
                    existingError.remove();
                }
            }
            
            // Enhanced form submission
            function enhanceFormSubmission() {
                const form = document.getElementById('loginForm');
                const submitBtn = form.querySelector('.btn-submit');
                
                form.addEventListener('submit', function(e) {
                    // Validate all required fields
                    const requiredFields = form.querySelectorAll('[required]');
                    let isValid = true;
                    
                    requiredFields.forEach(field => {
                        if (field.value.trim() === '') {
                            field.classList.add('error');
                            showError(field, 'This field is required');
                            isValid = false;
                        }
                    });
                    
                    if (!isValid) {
                        e.preventDefault();
                        return false;
                    }
                    
                    // Show loading state
                    submitBtn.classList.add('loading');
                    submitBtn.disabled = true;
                    submitBtn.textContent = 'Signing In...';
                    
                    // Simulate loading (remove in production)
                    setTimeout(() => {
                        submitBtn.classList.remove('loading');
                        submitBtn.disabled = false;
                        submitBtn.textContent = 'Sign In';
                    }, 2000);
                });
            }
            
            // Mobile gesture support
            function addMobileGestures() {
                let startY = 0;
                let startX = 0;
                
                document.addEventListener('touchstart', function(e) {
                    startY = e.touches[0].clientY;
                    startX = e.touches[0].clientX;
                });
                
                document.addEventListener('touchend', function(e) {
                    const endY = e.changedTouches[0].clientY;
                    const endX = e.changedTouches[0].clientX;
                    const diffY = startY - endY;
                    const diffX = startX - endX;
                    
                    // Swipe up gesture
                    if (diffY > 50 && Math.abs(diffX) < 50) {
                        // Focus on first input
                        const firstInput = document.querySelector('input');
                        if (firstInput) {
                            firstInput.focus();
                        }
                    }
                    
                    // Swipe down gesture
                    if (diffY < -50 && Math.abs(diffX) < 50) {
                        // Hide keyboard (blur all inputs)
                        document.activeElement.blur();
                    }
                });
            }
            
            // Performance monitoring
            function monitorPerformance() {
                if ('performance' in window) {
                    window.addEventListener('load', function() {
                        const loadTime = performance.timing.loadEventEnd - performance.timing.navigationStart;
                        console.log(`Page loaded in ${loadTime}ms`);
                        
                        if (loadTime > 3000) {
                            // Optimize for slow devices
                            document.body.classList.add('slow-device');
                        }
                    });
                }
            }
            
            // Initialize enhanced features
            function initEnhancedFeatures() {
                enhanceFormValidation();
                enhanceFormSubmission();
                addMobileGestures();
                monitorPerformance();
            }
            
            // Initialize enhanced features
            initEnhancedFeatures();
            
            // ===== ACCESSIBILITY IMPROVEMENTS =====
            
            // Add keyboard navigation for form
            const formInputs = document.querySelectorAll('input, select, button');
            formInputs.forEach((input, index) => {
                input.addEventListener('keydown', function(e) {
                    if (e.key === 'Enter' && this.type !== 'textarea') {
                        e.preventDefault();
                        
                        if (index < formInputs.length - 1) {
                            formInputs[index + 1].focus();
                        } else {
                            // Last input, submit form
                            document.querySelector('.btn-submit').click();
                        }
                    }
                });
            });
            
            // Add focus indicators for accessibility
            const focusableElements = document.querySelectorAll('a, button, input, select, textarea, [tabindex]:not([tabindex="-1"])');
            focusableElements.forEach(element => {
                element.addEventListener('focus', function() {
                    this.style.outline = '2px solid #3b82f6';
                    this.style.outlineOffset = '2px';
                });
                
                element.addEventListener('blur', function() {
                    this.style.outline = '';
                    this.style.outlineOffset = '';
                });
            });
            
            });
    </script>
    
