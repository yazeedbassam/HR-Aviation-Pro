<style>
    /* Professional design for AVIATION HR PRO */
    .hero-section {
        position: relative;
        min-height: 600px;
        display: flex;
        align-items: center;
        overflow: hidden;
        background: linear-gradient(rgba(30, 58, 138, 0.8), rgba(59, 130, 246, 0.6)), url('/images/aviation-hr-pro-background.jpg');
        background-size: cover;
        background-position: center;
        color: white;
        padding: 80px 0;
        margin-bottom: 40px;
        border-radius: 16px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }

    .hero-content {
        position: relative;
        z-index: 10;
        max-width: 900px;
        margin: 0 auto;
        padding: 0 20px;
        text-align: center;
    }

    .hero-logo {
        margin-bottom: 30px;
        animation: fadeInDown 1s ease-out;
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 20px;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        animation: fadeInDown 1s ease-out 0.2s;
        animation-fill-mode: both;
        background: linear-gradient(135deg, #ffffff 0%, #e2e8f0 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .hero-subtitle {
        font-size: 1.6rem;
        font-weight: 300;
        margin-bottom: 30px;
        line-height: 1.6;
        text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
        animation: fadeInUp 1s ease-out 0.4s;
        animation-fill-mode: both;
        color: #e2e8f0;
    }

    .cta-button {
        display: inline-block;
        background: var(--aviation-gradient-accent);
        color: white;
        font-size: 1.1rem;
        font-weight: 600;
        padding: 15px 35px;
        border-radius: 50px;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 8px 25px rgba(245, 158, 11, 0.4);
        margin-top: 20px;
        animation: fadeInUp 1s ease-out 0.6s;
        animation-fill-mode: both;
        border: none;
    }

    .cta-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 30px rgba(245, 158, 11, 0.6);
        color: white;
        text-decoration: none;
    }

    /* Features section */
    .features-section {
        padding: 80px 0;
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        border-radius: 16px;
        margin-bottom: 40px;
    }

    .section-title {
        text-align: center;
        font-size: 2.8rem;
        font-weight: 700;
        margin-bottom: 60px;
        color: var(--aviation-primary);
        position: relative;
    }

    .section-title::after {
        content: "";
        position: absolute;
        bottom: -15px;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 4px;
        background: var(--aviation-gradient-accent);
        border-radius: 2px;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 40px;
        margin: 0 auto;
        max-width: 1200px;
        padding: 0 20px;
    }

    .feature-card {
        background: white;
        border-radius: 16px;
        padding: 40px 30px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        text-align: center;
        border: 1px solid #e2e8f0;
        position: relative;
        overflow: hidden;
    }

    .feature-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: var(--aviation-gradient-primary);
    }

    .feature-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
    }

    .feature-icon {
        font-size: 3rem;
        margin-bottom: 25px;
        color: var(--aviation-primary);
        background: var(--aviation-gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .feature-title {
        font-size: 1.6rem;
        font-weight: 600;
        margin-bottom: 20px;
        color: var(--aviation-primary);
    }

    .feature-description {
        color: var(--aviation-gray);
        line-height: 1.7;
        font-size: 1.1rem;
    }

    /* Stats section */
    .stats-section {
        padding: 80px 0;
        background: var(--aviation-gradient-primary);
        color: white;
        text-align: center;
        border-radius: 16px;
        margin-bottom: 40px;
        position: relative;
        overflow: hidden;
    }

    .stats-section::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('/images/aviation-pattern.svg') repeat;
        opacity: 0.1;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 40px;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
        position: relative;
        z-index: 2;
    }

    .stat-item {
        padding: 30px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .stat-number {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 15px;
        background: var(--aviation-gradient-accent);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .stat-label {
        font-size: 1.2rem;
        opacity: 0.9;
        font-weight: 500;
    }

    /* Quote section */
    .quote-section {
        padding: 100px 0;
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        text-align: center;
        border-radius: 16px;
        margin-bottom: 40px;
    }

    .quote-content {
        max-width: 900px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .quote-text {
        font-size: 2rem;
        font-style: italic;
        line-height: 1.6;
        color: var(--aviation-primary);
        margin-bottom: 30px;
        position: relative;
    }

    .quote-text::before,
    .quote-text::after {
        content: '"';
        font-size: 4rem;
        color: var(--aviation-accent);
        position: absolute;
        top: -20px;
    }

    .quote-text::before {
        left: -30px;
    }

    .quote-text::after {
        right: -30px;
    }

    .quote-author {
        font-size: 1.3rem;
        font-weight: 600;
        color: var(--aviation-gray);
    }

    /* Call to action section */
    .cta-section {
        padding: 80px 0;
        background: linear-gradient(rgba(30, 58, 138, 0.9), rgba(59, 130, 246, 0.8)), url('/images/aviation-hr-pro-cta-bg.jpg');
        background-size: cover;
        background-position: center;
        color: white;
        text-align: center;
        border-radius: 16px;
        margin-bottom: 40px;
        position: relative;
    }

    .cta-content {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 20px;
        position: relative;
        z-index: 2;
    }

    .cta-title {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 25px;
        background: linear-gradient(135deg, #ffffff 0%, #e2e8f0 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .cta-description {
        font-size: 1.3rem;
        margin-bottom: 40px;
        line-height: 1.7;
        color: #e2e8f0;
    }

    /* Animations */


    /* Animated aircraft effects */
    .animated-aircraft-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 5;
        pointer-events: none;
        overflow: hidden;
    }

    .animated-aircraft {
        position: absolute;
        opacity: 0.8;
        filter: drop-shadow(0 0 12px rgba(255, 255, 255, 0.4));
        will-change: transform, opacity;
    }

    .aircraft-1 {
        width: 140px;
        height: 70px;
        top: 20%;
        left: -140px;
        animation: fly-right 25s linear infinite;
    }

    .aircraft-2 {
        width: 120px;
        height: 60px;
        top: 65%;
        right: -120px;
        animation: fly-left 20s linear infinite;
        animation-delay: 8s;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
        }
        
        .hero-subtitle {
            font-size: 1.3rem;
        }
        
        .section-title {
            font-size: 2.2rem;
        }
        
        .features-grid {
            grid-template-columns: 1fr;
        }
        
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 480px) {
        .stats-grid {
            grid-template-columns: 1fr;
        }
        
        .hero-title {
            font-size: 2rem;
        }
    }
</style>

