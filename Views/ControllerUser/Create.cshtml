@model WebApplication1.Models.ControllerUser

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    .custom-card {
        max-width: 950px;
        margin: 30px auto;
        border-radius: 16px;
        box-shadow: 0 2px 16px rgba(0,0,0,0.09);
        font-size: 0.99rem;
    }

    .form-control, .form-select {
        border-radius: 8px;
        min-height: 35px;
    }

    .form-label {
        font-weight: 500;
    }

    .section-title {
        font-size: 1.12rem;
        font-weight: 600;
        color: #188844;
        margin: 25px 0 10px 0;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .section-divider {
        height: 1.5px;
        background: linear-gradient(to right, #188844 50%, #eee 100%);
        border-radius: 1.5px;
        margin: 0 0 15px 0;
        opacity: 0.28;
    }

    .btn-success, .btn-secondary {
        border-radius: 8px;
        font-size: 1.08rem;
    }

    .alert-danger {
        font-size: 0.98rem;
    }

    .form-group {
        margin-bottom: 13px;
    }

    .col-md-6, .col-lg-4 {
        margin-bottom: 0;
    }

    .form-check-input {
        margin-top: 8px;
    }

    textarea.form-control {
        min-height: 35px;
        max-height: 60px;
    }
</style>

<div class="card custom-card">
    <div class="card-header bg-success text-white d-flex align-items-center" style="border-radius:16px 16px 0 0;">
        <i class="fa-solid fa-user-plus fa-lg me-2"></i>
        <span>Add New Air Traffic Controller</span>
    </div>
    <div class="card-body">
        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.SelectMany(v => v.Errors).Any())
        {
            <div class="alert alert-danger">
                <ul class="mb-0">
                    @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@err.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <!-- SECTION 1: User Information -->
            <div class="section-title mt-2">
                <i class="fa-solid fa-user"></i> User Information
            </div>
            <div class="section-divider"></div>
            <div class="row g-3">
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="FullName" class="form-label"></label>
                    <input asp-for="FullName" class="form-control" maxlength="60" />
                    <span asp-validation-for="FullName" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="Username" class="form-label"></label>
                    <input asp-for="Username" class="form-control" maxlength="40" />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" type="password" class="form-control" maxlength="100" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="Role" class="form-label">Role</label>
                    <select asp-for="Role" asp-items="ViewBag.Roles" class="form-select">
                        <option value="">-- Select Role --</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger small"></span>
                </div>
            </div>

            <!-- SECTION 2: Employee Information -->
            <div class="section-title">
                <i class="fa-solid fa-user-tie"></i> Employee Information
            </div>
            <div class="section-divider"></div>
            <div class="row g-3">
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="CountryId" class="form-label">Organizational Structure</label>
                    <select asp-for="CountryId"
                            asp-items="ViewBag.Countries"
                            id="CountryId"
                            class="form-select">
                        <option value="">-- Select Organizational Structure --</option>
                    </select>
                    <span asp-validation-for="CountryId" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="AirportId" class="form-label">Division</label>
                    <select asp-for="AirportId"
                            id="AirportId"
                            class="form-select">
                        <option value="">-- Select Division --</option>
                    </select>
                    <span asp-validation-for="AirportId" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="JobTitle" class="form-label">Job Title</label>
                    <select asp-for="JobTitle" asp-items="ViewBag.JobTitle" class="form-select">
                        <option value="">-- Select Job Title --</option>
                    </select>
                    <span asp-validation-for="JobTitle" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="LicenseNumber" class="form-label">License Number<span class="text-secondary small">(if Available)</span></label>
                    <input asp-for="LicenseNumber" class="form-control" maxlength="30" />
                    <span asp-validation-for="LicenseNumber" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="HireDate" class="form-label">Hire Date</label>
                    <input asp-for="HireDate" type="date" class="form-control" />
                    <span asp-validation-for="HireDate" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="CurrentDepartment" class="form-label">Current Department</label>
                    <select asp-for="CurrentDepartment" asp-items="ViewBag.CurrentDepartment" class="form-select">
                        <option value="">-- Select Department --</option>
                    </select>
                    <span asp-validation-for="CurrentDepartment" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="EmploymentStatus" class="form-label">Employment Status</label>
                    <select asp-for="EmploymentStatus" asp-items="ViewBag.EmploymentStatus" class="form-select">
                        <option value="">-- Select Status --</option>
                    </select>
                    <span asp-validation-for="EmploymentStatus" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <div class="form-check">
                        <input asp-for="NeedLicense" class="form-check-input" type="checkbox" checked />
                        <label asp-for="NeedLicense" class="form-check-label">Need License</label>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                        <label asp-for="IsActive" class="form-check-label">Active</label>
                    </div>
                </div>
            </div>

            <!-- SECTION 3: General Information -->
            <div class="section-title">
                <i class="fa-solid fa-circle-info"></i> General Information
            </div>
            <div class="section-divider"></div>
            <div class="row g-3">
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="EducationLevel" class="form-label">Education Level</label>
                    <select asp-for="EducationLevel" asp-items="ViewBag.EducationLevel" class="form-select">
                        <option value="">-- Select Level --</option>
                    </select>
                    <span asp-validation-for="EducationLevel" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="MaritalStatus" class="form-label">Marital Status</label>
                    <select asp-for="MaritalStatus" asp-items="ViewBag.MaritalStatus" class="form-select">
                        <option value="">-- Select Status --</option>
                    </select>
                    <span asp-validation-for="MaritalStatus" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" maxlength="20" />
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control" maxlength="80" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="Address" class="form-label">Address</label>
                    <textarea asp-for="Address" class="form-control" rows="1" maxlength="150"></textarea>
                    <span asp-validation-for="Address" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="EmergencyContact" class="form-label">Emergency Contact</label>
                    <input asp-for="EmergencyContact" class="form-control" maxlength="40" />
                    <span asp-validation-for="EmergencyContact" class="text-danger small"></span>
                </div>
            </div>

            <!-- SECTION 4: Financial Information -->
            <div class="section-title">
                <i class="fa-solid fa-money-bill-wave"></i> Financial Information
            </div>
            <div class="section-divider"></div>
            <div class="row g-3">
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="CurrentSalary" class="form-label"></label>
                    <input asp-for="CurrentSalary" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="CurrentSalary" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="AnnualIncreasePercentage" class="form-label"></label>
                    <input asp-for="AnnualIncreasePercentage" class="form-control" type="number" step="0.01" min="0" max="100" />
                    <span asp-validation-for="AnnualIncreasePercentage" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="SalaryAfterAnnualIncrease" class="form-label"></label>
                    <input asp-for="SalaryAfterAnnualIncrease" class="form-control" type="number" step="0.01" min="0" readonly />
                    <small class="text-muted">Calculated automatically</small>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="BankAccountNumber" class="form-label"></label>
                    <input asp-for="BankAccountNumber" class="form-control" maxlength="50" />
                    <span asp-validation-for="BankAccountNumber" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="BankName" class="form-label"></label>
                    <input asp-for="BankName" class="form-control" maxlength="100" />
                    <span asp-validation-for="BankName" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="TaxId" class="form-label"></label>
                    <input asp-for="TaxId" class="form-control" maxlength="50" />
                    <span asp-validation-for="TaxId" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="InsuranceNumber" class="form-label"></label>
                    <input asp-for="InsuranceNumber" class="form-control" maxlength="50" />
                    <span asp-validation-for="InsuranceNumber" class="text-danger small"></span>
                </div>
            </div>

            <!-- SECTION 5: Attachments -->
            <div class="section-title">
                <i class="fa-solid fa-paperclip"></i> Attachments
            </div>
            <div class="section-divider"></div>
            <div class="row g-3">
                <div class="col-lg-6 col-md-6 form-group">
                    <label asp-for="PhotoFile" class="form-label">Profile Photo</label>
                    <input asp-for="PhotoFile" type="file" class="form-control" accept="image/*" />
                    <span asp-validation-for="PhotoFile" class="text-danger small"></span>
                </div>
                <div class="col-lg-6 col-md-6 form-group">
                    <label asp-for="LicenseFile" class="form-label">Any PDF</label>
                    <input asp-for="LicenseFile" type="file" class="form-control" accept=".pdf" />
                    <span asp-validation-for="LicenseFile" class="text-danger small"></span>
                </div>
            </div>

            <div class="col-12 text-end mt-4">
                <button type="submit" class="btn btn-success px-4">
                    <i class="fa-solid fa-plus"></i> Add Controller
                </button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        $(function() {
            $('#CountryId').on('change', function() {
                var countryId = $(this).val();
                var airportSelect = $('#AirportId');
                airportSelect.empty().append($('<option></option>').val('').text('-- Select Division --'));

                if (countryId !== "") {
                    $.getJSON('/Airport/GetAirportsByCountry', { countryId: countryId }, function (data) {
                        $.each(data, function (i, airport) {
                            airportSelect.append($('<option></option>').val(airport.id).text(airport.name));
                        });
                    });
                }
            });

            // Calculate salary after annual increase
            function calculateSalaryAfterIncrease() {
                var currentSalary = parseFloat($('#CurrentSalary').val()) || 0;
                var annualIncrease = parseFloat($('#AnnualIncreasePercentage').val()) || 0;
                
                if (currentSalary > 0 && annualIncrease >= 0) {
                    var increaseAmount = currentSalary * (annualIncrease / 100);
                    var newSalary = currentSalary + increaseAmount;
                    $('#SalaryAfterAnnualIncrease').val(newSalary.toFixed(2));
                } else {
                    $('#SalaryAfterAnnualIncrease').val('');
                }
            }

            // Bind events to salary calculation
            $('#CurrentSalary, #AnnualIncreasePercentage').on('input', calculateSalaryAfterIncrease);
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}
