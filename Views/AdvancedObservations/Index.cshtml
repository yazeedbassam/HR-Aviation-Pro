    ViewData["Title"] = "الملاحظات - نظام الصلاحيات المتقدم";
    Layout = "_AdvancedLayout";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">
                <i class="bi bi-binoculars text-primary"></i>
                الملاحظات - نظام الصلاحيات المتقدم
            </h2>
            <p class="text-muted mb-0">عرض الملاحظات مع فلترة البيانات حسب الصلاحيات</p>
        </div>
        <div class="d-flex gap-2">
            @if (ViewBag.CanCreate == true)
            {
                <a href="@Url.Action("Create", "AdvancedObservations")" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> إضافة ملاحظة جديدة
                </a>
            }
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                <i class="bi bi-house"></i> الرئيسية
            </a>
        </div>
    </div>

    <!-- Messages -->
    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @ViewBag.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Permission Info -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-shield-check"></i>
                معلومات الصلاحيات
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <div class="text-center">
                        <i class="bi bi-person-circle fs-1 text-primary"></i>
                        <p class="mb-0"><strong>معرف المستخدم:</strong></p>
                        <p class="text-muted">@ViewBag.CurrentUserId</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="text-center">
                        <i class="bi bi-eye @(ViewBag.CanCreate == true ? "text-success" : "text-muted") fs-1"></i>
                        <p class="mb-0"><strong>عرض:</strong></p>
                        <p class="text-muted">@(ViewBag.CanCreate == true ? "مصرح" : "غير مصرح")</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="text-center">
                        <i class="bi bi-pencil @(ViewBag.CanEdit == true ? "text-warning" : "text-muted") fs-1"></i>
                        <p class="mb-0"><strong>تعديل:</strong></p>
                        <p class="text-muted">@(ViewBag.CanEdit == true ? "مصرح" : "غير مصرح")</p>
                    </div>
                </div>
                <div class="col-md-3">
