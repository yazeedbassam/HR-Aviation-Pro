                        <i class="bi bi-trash @(ViewBag.CanDelete == true ? "text-danger" : "text-muted") fs-1"></i>
                        <p class="mb-0"><strong>حذف:</strong></p>
                        <p class="text-muted">@(ViewBag.CanDelete == true ? "مصرح" : "غير مصرح")</p>
