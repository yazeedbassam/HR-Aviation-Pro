                                        <th>تاريخ العودة</th>
                                        <th>الملف</th>
                                        <th>الإجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (System.Data.DataRow row in Model.ControllerObservations.Rows)
                                    {
                                        <tr>
                                            <td>@row["ObservationNo"]</td>
                                            <td>@row["Employee"]</td>
