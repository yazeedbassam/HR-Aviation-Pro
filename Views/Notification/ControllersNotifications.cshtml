@model IEnumerable<WebApplication1.Models.ControllerUser>

@{
    ViewData["Title"] = ViewBag.Title ?? "Controller Notifications";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    .notification-card {
        max-width: 1200px;
        margin: 30px auto;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        font-size: 0.95rem;
    }

    .card-header {
        background: linear-gradient(135deg, #188844 0%, #2e7d32 100%);
        color: white;
        border-radius: 16px 16px 0 0;
        padding: 20px;
    }

    .table-responsive {
        border-radius: 0 0 16px 16px;
    }

    .table {
        margin-bottom: 0;
    }

    .table th {
        background-color: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
        font-weight: 600;
        color: #495057;
    }

    .table td {
        vertical-align: middle;
        border-bottom: 1px solid #dee2e6;
    }

    .status-badge {
        padding: 4px 8px;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .status-active {
        background-color: #d4edda;
        color: #155724;
    }

    .status-inactive {
        background-color: #f8d7da;
        color: #721c24;
    }

    .export-buttons {
        margin-bottom: 20px;
    }

    .btn-export {
        border-radius: 8px;
        font-size: 0.9rem;
        padding: 8px 16px;
        margin-right: 10px;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #6c757d;
    }

    .empty-state i {
        font-size: 4rem;
        margin-bottom: 20px;
        opacity: 0.5;
    }
</style>

<div class="card notification-card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h4 class="mb-1">
                <i class="fa-solid fa-bell me-2"></i>
                @ViewBag.Title
            </h4>
            <p class="mb-0 opacity-75">@ViewBag.Subtitle</p>
        </div>
        <div class="text-end">
            <small class="opacity-75">@DateTime.Now.ToString("yyyy/MM/dd HH:mm")</small>
        </div>
    </div>

    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="export-buttons">
                <a href="@Url.Action("ExportControllersNeedingLicensesToPDF")" class="btn btn-danger btn-export">
                    <i class="fa-solid fa-file-pdf me-1"></i>
                    Export PDF
                </a>
                <span class="badge bg-primary fs-6">@Model.Count() Controller(s)</span>
            </div>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Full Name</th>
                            <th>Username</th>
                            <th>Job Title</th>
                            <th>Department</th>
                            <th>Airport</th>
                            <th>Country</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }
                        @foreach (var controller in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>
                                    <strong>@controller.FullName</strong>
                                </td>
                                <td>@controller.Username</td>
                                <td>@(controller.JobTitle ?? "-")</td>
                                <td>@(controller.CurrentDepartment ?? "-")</td>
                                <td>@(controller.AirportName ?? "-")</td>
                                <td>@(controller.CountryName ?? "-")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(controller.Email))
                                    {
                                        <a href="mailto:@controller.Email" class="text-decoration-none">
                                            <i class="fa-solid fa-envelope me-1"></i>
                                            @controller.Email
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(controller.PhoneNumber))
                                    {
                                        <a href="tel:@controller.PhoneNumber" class="text-decoration-none">
                                            <i class="fa-solid fa-phone me-1"></i>
                                            @controller.PhoneNumber
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (controller.IsActive)
                                    {
                                        <span class="status-badge status-active">
                                            <i class="fa-solid fa-check-circle me-1"></i>
                                            Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="status-badge status-inactive">
                                            <i class="fa-solid fa-times-circle me-1"></i>
                                            Inactive
                                        </span>
                                    }
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fa-solid fa-check-circle"></i>
                <h5>No Notifications</h5>
                <p>All controllers are in good condition and do not require additional actions.</p>
            </div>
        }
    </div>
</div>

<div class="text-center mt-4">
    <a href="@Url.Action("Notifications", "Account")" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-left me-2"></i>
        Return to Notifications
    </a>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            // إضافة تأثيرات تفاعلية للجدول
            $('.table tbody tr').hover(
                function() {
                    $(this).addClass('table-active');
                },
                function() {
                    $(this).removeClass('table-active');
                }
            );
        });
    </script>
} 