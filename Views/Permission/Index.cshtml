@model List<WebApplication1.Models.PermissionViewModel>
@{
    ViewData["Title"] = "Permission Management";
    var permissionCategories = ViewBag.PermissionCategories as Dictionary<string, List<string>>;
    var totalPermissions = ViewBag.TotalPermissions as int? ?? 0;
    var activePermissions = ViewBag.ActivePermissions as int? ?? 0;
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Permission Management</h1>
        <div>
            <a href="@Url.Action("RolePermissions", "Permission")" class="btn btn-primary btn-sm">
                <i class="fas fa-users"></i> Manage Role Permissions
            </a>
            <a href="@Url.Action("UserDepartmentPermissions", "Permission")" class="btn btn-success btn-sm">
                <i class="fas fa-user-shield"></i> Manage User Department Permissions
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Permissions
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@totalPermissions</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-key fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Active Permissions
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@activePermissions</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Permission Categories
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@(permissionCategories?.Count ?? 0)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-folder fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Quick Actions
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                <a href="@Url.Action("Logs", "Permission")" class="text-warning">View Logs</a>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-history fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Permission Categories -->
    <div class="row">
        @if (permissionCategories != null)
        {
            foreach (var category in permissionCategories)
            {
                <div class="col-lg-6 mb-4">
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">@category.Key</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-sm">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>Permission</th>
                                            <th>Key</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var permissionKey in category.Value)
                                        {
                                            var permission = Model.FirstOrDefault(p => p.PermissionKey == permissionKey);
                                            if (permission != null)
                                            {
                                                <tr>
                                                    <td>
                                                        <strong>@permission.PermissionName</strong>
                                                        @if (!string.IsNullOrEmpty(permission.Description))
                                                        {
                                                            <br />
                                                            <small class="text-muted">@permission.Description</small>
                                                        }
                                                    </td>
                                                    <td>
                                                        <code class="small">@permission.PermissionKey</code>
                                                    </td>
                                                    <td>
                                                        @if (permission.IsActive)
                                                        {
                                                            <span class="badge badge-success">Active</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-secondary">Inactive</span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <!-- All Permissions Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Permissions</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="permissionsTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Permission Name</th>
                            <th>Permission Key</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var permission in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@permission.PermissionName</strong>
                                </td>
                                <td>
                                    <code>@permission.PermissionKey</code>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(permission.Description))
                                    {
                                        @permission.Description
                                    }
                                    else
                                    {
                                        <span class="text-muted">No description</span>
                                    }
                                </td>
                                <td>
                                    @if (permission.IsActive)
                                    {
                                        <span class="badge badge-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button type="button" class="btn btn-info btn-sm" 
                                                onclick="showPermissionDetails('@permission.PermissionKey')">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <a href="@Url.Action("RolePermissions", "Permission")" class="btn btn-primary btn-sm">
                                            <i class="fas fa-users"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Permission Details Modal -->
<div class="modal fade" id="permissionDetailsModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Permission Details</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body" id="permissionDetailsContent">
                <!-- Content will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#permissionsTable').DataTable({
                "order": [[0, "asc"]],
                "pageLength": 25,
                "language": {
                    "search": "Search permissions:",
                    "lengthMenu": "Show _MENU_ permissions per page",
                    "info": "Showing _START_ to _END_ of _TOTAL_ permissions"
                }
            });
        });

        function showPermissionDetails(permissionKey) {
            // This function can be expanded to show detailed information about the permission
            // For now, we'll show a simple message
            $('#permissionDetailsContent').html(`
                <div class="alert alert-info">
                    <h6>Permission Key: ${permissionKey}</h6>
                    <p>This permission is used to control access to specific functionality in the system.</p>
                    <hr>
                    <p><strong>Usage:</strong></p>
                    <ul>
                        <li>Add this permission to roles to grant access to all users with that role</li>
                        <li>Add this permission to specific users for department-level access control</li>
                        <li>Use in controllers with [RequirePermission("${permissionKey}")] attribute</li>
                    </ul>
                </div>
            `);
            $('#permissionDetailsModal').modal('show');
        }

        // Auto-refresh statistics every 30 seconds
        setInterval(function() {
            // You can add AJAX call here to refresh statistics
            console.log('Refreshing permission statistics...');
        }, 30000);
    </script>
} 