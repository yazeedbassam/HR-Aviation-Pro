@model WebApplication1.Models.ConfigurationValueViewModel
@{
    ViewData["Title"] = "Edit Configuration Value";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Edit Configuration Value
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="EditValue" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ValueId" />
                        <input type="hidden" asp-for="CategoryName" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CategoryId" class="form-label">Category</label>
                                    <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select" required>
                                        <option value="">-- Select Category --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ValueKey" class="form-label">Value Key</label>
                                    <input asp-for="ValueKey" class="form-control" placeholder="e.g., NEW_VALUE" required />
                                    <small class="form-text text-muted">Unique identifier for this value (uppercase recommended)</small>
                                    <span asp-validation-for="ValueKey" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label asp-for="ValueText" class="form-label">Display Text</label>
                                    <input asp-for="ValueText" class="form-control" placeholder="e.g., New Value" required />
                                    <small class="form-text text-muted">Text that will be displayed to users</small>
                                    <span asp-validation-for="ValueText" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="DisplayOrder" class="form-label">Display Order</label>
                                    <input asp-for="DisplayOrder" type="number" class="form-control" min="0" />
                                    <small class="form-text text-muted">Order in dropdown list (lower numbers appear first)</small>
                                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                                                        <div class="mb-3">
                                    <div class="form-check">
                                        <input type="checkbox" id="IsActiveCheckbox" class="form-check-input" />
                                        <input type="hidden" asp-for="IsActiveString" id="IsActiveHidden" value="false" />
                                        <label for="IsActiveCheckbox" class="form-check-label">
                                            Active
                                        </label>
                                    </div>
                                    <small class="form-text text-muted">Inactive values won't appear in dropdown lists</small>
                                </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Category" asp-route-categoryName="@Model.CategoryName" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Category
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle"></i> Update Value
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

        @section Scripts {
            <script>
                $(document).ready(function() {
                    // Handle checkbox change
                    $('#IsActiveCheckbox').on('change', function() {
                        $('#IsActiveHidden').val(this.checked ? 'true' : 'false');
                    });

                    // Set initial checkbox state
                    var isActiveValue = $('#IsActiveHidden').val();
                    $('#IsActiveCheckbox').prop('checked', isActiveValue === 'true');

                    // Form validation
                    $('form').on('submit', function(e) {
                        var valueKey = $('#ValueKey').val();
                        if (valueKey && !/^[A-Z0-9_]+$/.test(valueKey)) {
                            e.preventDefault();
                            alert('Value Key must contain only uppercase letters, numbers, and underscores.');
                            return false;
                        }
                    });
                });
            </script>
        } 