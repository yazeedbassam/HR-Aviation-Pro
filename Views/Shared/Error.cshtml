@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center mt-5">
    <h1 class="text-danger">عذراً، حدث خطأ</h1>
    <h2 class="text-muted">حدث خطأ أثناء معالجة طلبك</h2>
    
    @if (Model.ShowRequestId)
    {
        <p class="text-muted">
            <small>Request ID: <code>@Model.RequestId</code></small>
        </p>
    }
    
    <div class="mt-4">
        <a href="/" class="btn btn-primary">العودة للصفحة الرئيسية</a>
        <a href="/Account/Login" class="btn btn-secondary">تسجيل الدخول</a>
    </div>
    
    @if (Context.RequestServices.GetService<IWebHostEnvironment>().IsDevelopment())
    {
        <div class="mt-4 p-3 bg-light rounded">
            <h4>Development Mode</h4>
            <p class="text-muted">
                <strong>The Development environment shouldn't be enabled for deployed applications.</strong>
                It can result in displaying sensitive information from exceptions to end users.
            </p>
        </div>
    }
</div>
