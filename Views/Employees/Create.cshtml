        font-size: 0.90rem;
    }

    .custom-header {
        font-size: 1.15rem;
        font-weight: 600;
        letter-spacing: .5px;
        color: #198754; /* Green color for create header */
        display: flex;
        align-items: center;
        gap: 10px;
        background-color: #f8f9fa;
    }

    .form-section-header {
        font-size: 1rem;
        font-weight: 600;
        color: #343a40;
        margin-top: 1.5rem;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #dee2e6;
    }

    .section-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #146c43;
        margin-top: 2rem;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .section-divider {
        height: 2px;
        background: linear-gradient(90deg, #146c43, #198754);
        margin-bottom: 1.5rem;
        border-radius: 1px;
    }

    .col-md-6, .col-lg-4 {
        margin-bottom: 0;
    }

    textarea.form-control {
        min-height: 35px;
        max-height: 60px;
    }

    .form-control-sm, .form-select-sm {
        font-size: 0.85rem;
    }

    .col-form-label-sm {
        font-weight: 500;
    }

    .btn-group-custom {
        display: flex;
        gap: 10px;
    }

    .photo-preview {
