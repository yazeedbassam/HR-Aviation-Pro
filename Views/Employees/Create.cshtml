<!-- Confirmation Modal -->
<div id="resetConfirmModal" class="modal-custom">
    <div class="modal-header-custom">
        <h5 class="modal-title">Confirm Reset</h5>
    </div>
    <div class="modal-body-custom">
        <p>Are you sure you want to clear the form?</p>
    </div>
    <div class="modal-footer-custom">
        <button type="button" class="btn btn-secondary" id="cancelResetBtn">Cancel</button>
        <button type="button" class="btn btn-danger" id="confirmResetBtn">Yes, Reset</button>
    </div>
</div>
<div id="modalBackdrop" class="modal-backdrop"></div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const resetBtn = document.getElementById('resetBtn');
            const modal = document.getElementById('resetConfirmModal');
            const backdrop = document.getElementById('modalBackdrop');
            const confirmResetBtn = document.getElementById('confirmResetBtn');
            const cancelResetBtn = document.getElementById('cancelResetBtn');

            // Salary calculation functionality
            const currentSalaryInput = document.getElementById('currentSalary');
            const annualIncreaseInput = document.getElementById('annualIncrease');
            const salaryAfterIncreaseInput = document.getElementById('salaryAfterIncrease');

            function calculateSalaryAfterIncrease() {
                const currentSalary = parseFloat(currentSalaryInput.value) || 0;
                const annualIncrease = parseFloat(annualIncreaseInput.value) || 0;
                
                if (currentSalary > 0 && annualIncrease >= 0) {
                    const increaseAmount = currentSalary * (annualIncrease / 100);
                    const newSalary = currentSalary + increaseAmount;
                    salaryAfterIncreaseInput.value = newSalary.toFixed(2);
                } else {
                    salaryAfterIncreaseInput.value = '';
                }
            }

            if (currentSalaryInput) {
                currentSalaryInput.addEventListener('input', calculateSalaryAfterIncrease);
            }
            if (annualIncreaseInput) {
                annualIncreaseInput.addEventListener('input', calculateSalaryAfterIncrease);
            }

            function showModal() {
                modal.style.display = 'block';
                backdrop.style.display = 'block';
            }

            function hideModal() {
                modal.style.display = 'none';
                backdrop.style.display = 'none';
            }

            if (resetBtn) {
                resetBtn.addEventListener('click', function () {
                    showModal();
                });
            }

            if (cancelResetBtn) {
                cancelResetBtn.addEventListener('click', hideModal);
            }

            if (backdrop) {
                backdrop.addEventListener('click', hideModal);
            }

            if (confirmResetBtn) {
                confirmResetBtn.addEventListener('click', function () {
                    const form = document.getElementById('createEmployeeForm');
                    form.reset();

                    // Clear validation messages
                    const validationSpans = form.querySelectorAll('.text-danger span');
                    validationSpans.forEach(span => span.textContent = '');

                    const validationSummary = form.querySelector('.validation-summary-errors');
                    if (validationSummary) {
                        validationSummary.innerHTML = '<ul></ul>';
                    }

                    // Set default values
                    const officialIdInput = document.getElementById('EmployeeOfficialID');
                    if(officialIdInput) {
                        officialIdInput.value = '-';
                    }

                                // Clear calculated salary
            if (salaryAfterIncreaseInput) {
                salaryAfterIncreaseInput.value = '';
            }

            // Clear photo preview
            const photoPreview = document.getElementById('photoPreview');
            if (photoPreview) {
                photoPreview.src = '/images/default-avatar.png';
            }

            hideModal();
        });
    }

    // Photo preview functionality
    const photoFile = document.getElementById('photoFile');
    const photoPreview = document.getElementById('photoPreview');

    if (photoFile) {
        photoFile.addEventListener('change', function (e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    photoPreview.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    }
});
    </script>
}

