@model WebApplication1.Models.CreateEmployeeViewModel
@{
    ViewData["Title"] = "Create New Employee";
}

<style>
    .custom-card {
        max-width: 950px;
        margin: 30px auto;
        border-radius: 16px;
        box-shadow: 0 2px 16px rgba(0,0,0,0.09);
        font-size: 0.99rem;
    }

    .form-control, .form-select {
        border-radius: 8px;
        min-height: 35px;
    }

    .form-label {
        font-weight: 500;
    }

    .section-title {
        font-size: 1.12rem;
        font-weight: 600;
        color: #188844;
        margin: 25px 0 10px 0;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .section-divider {
        height: 1.5px;
        background: linear-gradient(to right, #188844 50%, #eee 100%);
        border-radius: 1.5px;
        margin: 0 0 15px 0;
        opacity: 0.28;
    }

    .btn-success, .btn-secondary {
        border-radius: 8px;
        font-size: 1.08rem;
    }

    .alert-danger {
        font-size: 0.98rem;
    }

    .form-group {
        margin-bottom: 13px;
    }

    .col-md-6, .col-lg-4 {
        margin-bottom: 0;
    }

    .form-check-input {
        margin-top: 8px;
    }

    textarea.form-control {
        min-height: 35px;
        max-height: 60px;
    }

    .photo-preview {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #dee2e6;
        margin-bottom: 10px;
    }

    .photo-upload-container {
        text-align: center;
        padding: 20px;
        border: 2px dashed #dee2e6;
        border-radius: 10px;
        background-color: #f8f9fa;
    }
</style>

<div class="card custom-card">
    <div class="card-header bg-success text-white d-flex align-items-center" style="border-radius:16px 16px 0 0;">
        <i class="fa-solid fa-user-plus fa-lg me-2"></i>
        <span>Add New Employee</span>
    </div>
    <div class="card-body">
        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.SelectMany(v => v.Errors).Any())
        {
            <div class="alert alert-danger">
                <ul class="mb-0">
                    @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@err.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form id="createEmployeeForm" asp-action="Create" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <!-- SECTION 1: User Information -->
            <div class="section-title mt-2">
                <i class="fa-solid fa-user"></i> User Information
            </div>
            <div class="section-divider"></div>
            <div class="row g-3">
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="FullName" class="form-label"></label>
                    <input asp-for="FullName" class="form-control" maxlength="60" />
                    <span asp-validation-for="FullName" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="Username" class="form-label"></label>
                    <input asp-for="Username" class="form-control" maxlength="40" />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" type="password" class="form-control" maxlength="100" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="RoleName" class="form-label">Role</label>
                    <select asp-for="RoleName" asp-items="ViewBag.Roles" class="form-select">
                        <option value="">-- Select Role --</option>
                    </select>
                    <span asp-validation-for="RoleName" class="text-danger small"></span>
                </div>
            </div>

            <!-- SECTION 2: Employee Information -->
            <div class="section-title">
                <i class="fa-solid fa-user-tie"></i> Employee Information
            </div>
            <div class="section-divider"></div>
            <div class="row g-3">
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="OrganizationalStructure" class="form-label">Organizational Structure</label>
                    <select asp-for="OrganizationalStructure" asp-items="ViewBag.Countries" id="CountryId" class="form-select">
                        <option value="">-- Select Organizational Structure --</option>
                    </select>
                    <span asp-validation-for="OrganizationalStructure" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="Division" class="form-label">Division</label>
                    <select asp-for="Division" id="AirportId" class="form-select">
                        <option value="">-- Select Division --</option>
                    </select>
                    <span asp-validation-for="Division" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="JobTitle" class="form-label">Job Title</label>
                    <select asp-for="JobTitle" asp-items="ViewBag.JobTitles" class="form-select">
                        <option value="">-- Select Job Title --</option>
                    </select>
                    <span asp-validation-for="JobTitle" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="EmployeeOfficialID" class="form-label">Employee Official ID</label>
                    <input asp-for="EmployeeOfficialID" class="form-control" value="-" maxlength="30" />
                    <span asp-validation-for="EmployeeOfficialID" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="HireDate" class="form-label">Hire Date</label>
                    <input asp-for="HireDate" type="date" class="form-control" />
                    <span asp-validation-for="HireDate" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="Department" class="form-label">Current Department</label>
                    <select asp-for="Department" asp-items="ViewBag.Departments" class="form-select">
                        <option value="">-- Select Department --</option>
                    </select>
                    <span asp-validation-for="Department" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <div class="form-check">
                        <input asp-for="NeedLicense" class="form-check-input" type="checkbox" checked />
                        <label asp-for="NeedLicense" class="form-check-label">Need License</label>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                        <label asp-for="IsActive" class="form-check-label">Active</label>
                    </div>
                </div>
            </div>

            <!-- SECTION 3: General Information -->
            <div class="section-title">
                <i class="fa-solid fa-circle-info"></i> General Information
            </div>
            <div class="section-divider"></div>
            <div class="row g-3">
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="EducationLevel" class="form-label">Education Level</label>
                    <select asp-for="EducationLevel" class="form-select">
                        <option value="">-- Select Level --</option>
                        <option value="High School">High School</option>
                        <option value="Bachelor's Degree">Bachelor's Degree</option>
                        <option value="Master's Degree">Master's Degree</option>
                        <option value="PhD">PhD</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="EducationLevel" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="MaritalStatus" class="form-label">Marital Status</label>
                    <select asp-for="MaritalStatus" class="form-select">
                        <option value="">-- Select Status --</option>
                        <option value="Single">Single</option>
                        <option value="Married">Married</option>
                        <option value="Divorced">Divorced</option>
                        <option value="Widowed">Widowed</option>
                    </select>
                    <span asp-validation-for="MaritalStatus" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="Gender" class="form-label">Gender</label>
                    <select asp-for="Gender" asp-items="ViewBag.Gender" class="form-select">
                        <option value="">-- Select Gender --</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" maxlength="20" />
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control" maxlength="80" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="Address" class="form-label">Address</label>
                    <textarea asp-for="Address" class="form-control" rows="1" maxlength="150"></textarea>
                    <span asp-validation-for="Address" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="EmergencyContactPhone" class="form-label">Emergency Contact</label>
                    <input asp-for="EmergencyContactPhone" class="form-control" maxlength="40" />
                    <span asp-validation-for="EmergencyContactPhone" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="Location" class="form-label">Location</label>
                    <input asp-for="Location" class="form-control" maxlength="100" />
                    <span asp-validation-for="Location" class="text-danger small"></span>
                </div>
            </div>

            <!-- SECTION 4: Financial Information -->
            <div class="section-title">
                <i class="fa-solid fa-money-bill-wave"></i> Financial Information
            </div>
            <div class="section-divider"></div>
            <div class="row g-3">
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="CurrentSalary" class="form-label"></label>
                    <input asp-for="CurrentSalary" class="form-control" type="number" step="0.01" min="0" id="currentSalary" />
                    <span asp-validation-for="CurrentSalary" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="AnnualIncreasePercentage" class="form-label"></label>
                    <input asp-for="AnnualIncreasePercentage" class="form-control" type="number" step="0.01" min="0" max="100" id="annualIncrease" />
                    <span asp-validation-for="AnnualIncreasePercentage" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="SalaryAfterAnnualIncrease" class="form-label"></label>
                    <input asp-for="SalaryAfterAnnualIncrease" class="form-control" type="number" step="0.01" min="0" readonly id="salaryAfterIncrease" />
                    <small class="text-muted">Calculated automatically</small>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="BankAccountNumber" class="form-label"></label>
                    <input asp-for="BankAccountNumber" class="form-control" maxlength="50" />
                    <span asp-validation-for="BankAccountNumber" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="BankName" class="form-label"></label>
                    <input asp-for="BankName" class="form-control" maxlength="100" />
                    <span asp-validation-for="BankName" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="TaxId" class="form-label"></label>
                    <input asp-for="TaxId" class="form-control" maxlength="50" />
                    <span asp-validation-for="TaxId" class="text-danger small"></span>
                </div>
                <div class="col-lg-4 col-md-6 form-group">
                    <label asp-for="InsuranceNumber" class="form-label"></label>
                    <input asp-for="InsuranceNumber" class="form-control" maxlength="50" />
                    <span asp-validation-for="InsuranceNumber" class="text-danger small"></span>
                </div>
            </div>

            <!-- SECTION 5: Attachments -->
            <div class="section-title">
                <i class="fa-solid fa-paperclip"></i> Attachments
            </div>
            <div class="section-divider"></div>
            <div class="row g-3">
                <div class="col-lg-6 col-md-6 form-group">
                    <label class="form-label">Profile Photo</label>
                    <div class="photo-upload-container">
                        <img id="photoPreview" src="/images/default-avatar.png" alt="Employee Photo" class="photo-preview" />
                        <div class="mt-2">
                            <input type="file" id="photoFile" name="photoFile" accept="image/*" class="form-control" />
                            <small class="text-muted">Upload a photo (JPG, PNG, GIF)</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 text-end mt-4">
                <button type="submit" class="btn btn-success px-4">
                    <i class="fa-solid fa-plus"></i> Add Employee
                </button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        $(function() {
            // Organizational Structure and Division functionality
            $('#CountryId').on('change', function() {
                var countryId = $(this).val();
                var airportSelect = $('#AirportId');
                airportSelect.empty().append($('<option></option>').val('').text('-- Select Division --'));

                if (countryId !== "") {
                    $.getJSON('/Airport/GetAirportsByCountry', { countryId: countryId }, function (data) {
                        $.each(data, function (i, airport) {
                            airportSelect.append($('<option></option>').val(airport.id).text(airport.name));
                        });
                    });
                }
            });

            // Calculate salary after annual increase
            function calculateSalaryAfterIncrease() {
                var currentSalary = parseFloat($('#currentSalary').val()) || 0;
                var annualIncrease = parseFloat($('#annualIncrease').val()) || 0;
                
                if (currentSalary > 0 && annualIncrease >= 0) {
                    var increaseAmount = currentSalary * (annualIncrease / 100);
                    var newSalary = currentSalary + increaseAmount;
                    $('#salaryAfterIncrease').val(newSalary.toFixed(2));
                } else {
                    $('#salaryAfterIncrease').val('');
                }
            }

            // Bind events to salary calculation
            $('#currentSalary, #annualIncrease').on('input', calculateSalaryAfterIncrease);

            // Photo preview functionality
            $('#photoFile').on('change', function (e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        $('#photoPreview').attr('src', e.target.result);
                    };
                    reader.readAsDataURL(file);
                }
            });
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}

