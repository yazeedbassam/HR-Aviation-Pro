@model WebApplication1.ViewModels.ProjectEditViewModel
@{
    ViewData["Title"] = "Edit Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- CSS for Select2 -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
<style>
    .select2-container--default .select2-selection--multiple {
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
        padding: 0.375rem 0.75rem;
    }

    .select2-container .select2-selection--multiple {
        min-height: calc(1.5em + 0.75rem + 2px);
    }

    .card-header-custom {
        background-color: #0d6efd;
        color: white;
    }
</style>

<div class="container-fluid py-4">
    <div class="card">
        <div class="card-header card-header-custom">
            <h4><i class="fas fa-pencil-alt me-2"></i>Edit Course: @Model.Project.ProjectName</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" id="editProjectForm">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="ProjectId" />

                <input type="hidden" asp-for="Project.ProjectId" />


                <!-- Project Details Section -->
                <h5 class="mb-3">Course Details</h5>
                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label asp-for="Project.ProjectName" class="form-label"> Course Name</label>
                            <input asp-for="Project.ProjectName" class="form-control" />
                            <span asp-validation-for="Project.ProjectName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Project.Status" class="form-label"></label>
                            <select asp-for="Project.Status" class="form-select">
                                <option value="Planning">Planning</option>
                                <option value="In Progress">In Progress</option>
                                <option value="On Hold">On Hold</option>
                                <option value="Completed">Completed</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                            <span asp-validation-for="Project.Status" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Project.Description" class="form-label"></label>
                    <textarea asp-for="Project.Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Project.Description" class="text-danger"></span>
                </div>

                <hr class="my-4" />

                <!-- Dates & Location Section -->
                <h5 class="mb-3">Dates & Location</h5>
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Project.StartDate" class="form-label"></label>
                            <input asp-for="Project.StartDate" type="date" class="form-control" value="@Model.Project.StartDate?.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="Project.StartDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Project.EndDate" class="form-label"></label>
                            <input asp-for="Project.EndDate" type="date" class="form-control" value="@Model.Project.EndDate?.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="Project.EndDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Project.Location" class="form-label"></label>
                            <input asp-for="Project.Location" class="form-control" />
                            <span asp-validation-for="Project.Location" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Project.AssociatedEntity" class="form-label"></label>
                            <input asp-for="Project.AssociatedEntity" class="form-control" />
                            <span asp-validation-for="Project.AssociatedEntity" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <hr class="my-4" />

                <!-- Participants & Divisions Section -->
                <h5 class="mb-3">Participants & Divisions</h5>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="SelectedParticipantIds" class="form-label"></label>
                            <select asp-for="SelectedParticipantIds" asp-items="@Model.AllParticipants" class="form-control select2" multiple="multiple"></select>
                            <span asp-validation-for="SelectedParticipantIds" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="SelectedDivisionIds" class="form-label"></label>
                            <select asp-for="SelectedDivisionIds" asp-items="@Model.AllDivisions" class="form-control select2" multiple="multiple"></select>
                            <span asp-validation-for="SelectedDivisionIds" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="mt-4 d-flex justify-content-between align-items-center">
                    <!-- Delete Button on the left -->
                    <div>
                        <button type="button" id="deleteProjectBtn" class="btn btn-danger"><i class="fas fa-trash-alt me-2"></i>Delete Course</button>
                    </div>

                    <!-- Save and Cancel buttons on the right -->
                    <div>
                        <a asp-action="Details" asp-route-id="@Model.ProjectId" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Save Changes</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!-- 1. قم أولاً بتحميل سكربتات التحقق من الصحة (Validation Scripts) -->
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- 2. ثم قم بتحميل مكتبة Select2 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    <!-- 3. الآن، قم بتشغيل سكربت التهيئة الخاص بـ Select2 داخل document.ready -->
    <script>
        $(function( ) {
            // تهيئة Select2
            $('.select2').select2({
                placeholder: "Select options",
                allowClear: true
            });

            // التعامل مع حذف المشروع
            $('#deleteProjectBtn').on('click', function(e) {
                e.preventDefault(); // منع السلوك الافتراضي للزر

                const projectId = @Model.ProjectId; // جلب معرف المشروع من النموذج
                // جلب اسم المشروع بأمان للاستخدام في رسالة التأكيد
                const projectName = "@Html.Raw(Model.Project.ProjectName.Replace("\"", "\\\""))";
                // جلب رمز منع التزوير من النموذج الرئيسي
                const token = $('#editProjectForm input[name="__RequestVerificationToken"]').val();

                // عرض نافذة تأكيد الحذف باستخدام SweetAlert2
                Swal.fire({
                    title: 'Are you sure?',
                    text: `You are about to permanently delete the project "${projectName}". You won't be able to revert this!`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // إذا أكد المستخدم الحذف، قم بإنشاء نموذج ديناميكي لإرسال طلب POST
                        var deleteForm = $('<form>')
                            .attr('method', 'post')
                            // تعيين مسار الإجراء (action) مع تضمين معرف المشروع في الـ URL
                            .attr('action', '/Projects/Delete/' + projectId);

                        // إضافة رمز منع التزوير إلى النموذج الديناميكي
                        deleteForm.append(
                            $('<input>')
                                .attr('type', 'hidden')
                                .attr('name', '__RequestVerificationToken')
                                .val(token)
                        );

                        // إلحاق النموذج بالجسم (body) وإرساله
                        $('body').append(deleteForm);
                        deleteForm.submit();
                    }
                });
            });
        });
    </script>
}

