@model WebApplication1.Models.CertificateViewModel

@{
    ViewData["Title"] = "Delete Certificate";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Delete Certificate</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4>Are you sure you want to delete this certificate?</h4>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Certificate ID:</dt>
                        <dd class="col-sm-9">@Model.CertificateId</dd>

                        <dt class="col-sm-3">Type:</dt>
                        <dd class="col-sm-9">@Model.TypeName</dd>

                        <dt class="col-sm-3">Title:</dt>
                        <dd class="col-sm-9">@Model.Title</dd>

                        @if (!string.IsNullOrEmpty(Model.ControllerName))
                        {
                            <dt class="col-sm-3">Controller:</dt>
                            <dd class="col-sm-9">@Model.ControllerName</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.EmployeeName))
                        {
                            <dt class="col-sm-3">Employee:</dt>
                            <dd class="col-sm-9">@Model.EmployeeName</dd>
                        }

                        <dt class="col-sm-3">Issue Date:</dt>
                        <dd class="col-sm-9">@Model.IssueDate?.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-3">Expiry Date:</dt>
                        <dd class="col-sm-9">@Model.ExpiryDate?.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-3">Status:</dt>
                        <dd class="col-sm-9">@Model.Status</dd>

                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <dt class="col-sm-3">Notes:</dt>
                            <dd class="col-sm-9">@Model.Notes</dd>
                        }
                    </dl>

                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="CertificateId" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 