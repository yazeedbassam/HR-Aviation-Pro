@model List<WebApplication1.Models.CertificateViewModel>

<div class="card mt-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="fa-solid fa-users"></i>
            Employees & Operation Staff Certificates & Courses
        </h5>
        <span class="badge bg-primary">@(Model?.Count ?? 0) Records</span>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="employeesCertsTable">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Employee</th>
                            <th>Department</th>
                            <th>Type</th>
                            <th>Title</th>
                            <th>Issued</th>
                            <th>Expiry</th>
                            <th>Status</th>
                            <th>File</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var certificate = Model[i];
                            var rowClass = "";
                            if (certificate.ExpiryDate.HasValue)
                            {
                                var daysUntilExpiry = (certificate.ExpiryDate.Value - DateTime.Now).Days;
                                if (daysUntilExpiry < 0)
                                    rowClass = "table-danger";
                                else if (daysUntilExpiry <= 30)
                                    rowClass = "table-warning";
                            }

                            <tr class="@rowClass">
                                <td>@(i + 1)</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(certificate.EmployeeName))
                                    {
                                        <span class="fw-medium">@certificate.EmployeeName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(certificate.EmployeeDepartment))
                                    {
                                        <span class="badge bg-info">@certificate.EmployeeDepartment</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(certificate.TypeName))
                                    {
                                        <span class="badge bg-secondary">@certificate.TypeName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(certificate.Title))
                                    {
                                        <span class="fw-medium">@certificate.Title</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (certificate.IssueDate.HasValue)
                                    {
                                        <span class="text-success">@certificate.IssueDate.Value.ToString("dd/MM/yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (certificate.ExpiryDate.HasValue)
                                    {
                                        var daysUntilExpiry = (certificate.ExpiryDate.Value - DateTime.Now).Days;
                                        var statusClass = daysUntilExpiry < 0 ? "text-danger" : 
                                                        daysUntilExpiry <= 30 ? "text-warning" : "text-success";
                                        <span class="@statusClass fw-bold">@certificate.ExpiryDate.Value.ToString("dd/MM/yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(certificate.Status))
                                    {
                                        var statusClass = certificate.Status.ToLower() switch
                                        {
                                            "completed" => "bg-success",
                                            "pending" => "bg-warning",
                                            "rejected" => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                        <span class="badge @statusClass">@certificate.Status</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(certificate.FilePath))
                                    {
                                        <a href="@certificate.FilePath" target="_blank" class="btn btn-sm btn-outline-primary" title="Download File">
                                            <i class="fa-solid fa-download"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No File</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        @{
                                            // Dynamic permission checking for Employee Certificate operations
                                            var canView = Html.HasAdvancedPermission("EMPLOYEECERTIFICATE_VIEW");
                                            var canAdd = Html.HasAdvancedPermission("EMPLOYEECERTIFICATE_ADD");
                                            var canEdit = Html.HasAdvancedPermission("EMPLOYEECERTIFICATE_EDIT");
                                            var canDelete = Html.HasAdvancedPermission("EMPLOYEECERTIFICATE_DELETE");
                                            var canExport = Html.HasAdvancedPermission("EMPLOYEECERTIFICATE_EXPORT");
                                            var isAdmin = Html.IsAdvancedAdmin();
                                            
                                            // Log permissions for debugging
                                            System.Diagnostics.Debug.WriteLine($"🔍 Employee Certificate Permissions - View:{canView}, Add:{canAdd}, Edit:{canEdit}, Delete:{canDelete}, Export:{canExport}, IsAdmin:{isAdmin}");
                                        }
                                        
                                        @* View Button - Only visible if user has view permission *@
                                        @if (canView || isAdmin)
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-info" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#certificateDetailsModal"
                                                    data-type="@certificate.TypeName"
                                                    data-personname="@certificate.EmployeeName"
                                                    data-personjob="@certificate.EmployeeDepartment"
                                                    data-title="@certificate.Title"
                                                    data-issuedate="@(certificate.IssueDate?.ToString("dd/MM/yyyy"))"
                                                    data-expirydate="@(certificate.ExpiryDate?.ToString("dd/MM/yyyy"))"
                                                    data-status="@certificate.Status"
                                                    data-notes="@certificate.Notes">
                                                <i class="fa-solid fa-eye"></i>
                                            </button>
                                        }
                                        
                                        @* Edit Button - Only visible if user has edit permission *@
                                        @if (canEdit || isAdmin)
                                        {
                                            <a href="@Url.Action("Edit", "Certificate", new { id = certificate.CertificateId })" 
                                               class="btn btn-sm btn-outline-warning">
                                                <i class="fa-solid fa-edit"></i>
                                            </a>
                                        }
                                        
                                        @* Delete Button - Only visible if user has delete permission *@
                                        @if (canDelete || isAdmin)
                                        {
                                            <a href="@Url.Action("Delete", "Certificate", new { id = certificate.CertificateId })" 
                                               class="btn btn-sm btn-outline-danger"
                                               onclick="return confirm('Are you sure you want to delete this certificate?')">
                                                <i class="fa-solid fa-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Export Buttons -->
            @if (Html.HasAdvancedPermission("EMPLOYEECERTIFICATE_EXPORT") || Html.IsAdvancedAdmin())
            {
                <div class="mt-3 d-flex gap-2">
                    <button class="btn btn-danger btn-sm" onclick="exportToFile('Employees', 'ExportToPdf', 'pdf')">
                        <i class="fa-solid fa-file-pdf me-1"></i> Export PDF
                    </button>
                    <button class="btn btn-success btn-sm" onclick="exportToFile('Employees', 'ExportToExcel', 'xlsx')">
                        <i class="fa-solid fa-file-excel me-1"></i> Export Excel
                    </button>
                </div>
            }
        }
        else
        {
            <div class="text-center py-4">
                <i class="fa-solid fa-inbox fa-3x text-muted mb-3"></i>
                <p class="text-muted">No certificates found for Employees & Operation Staff</p>
            </div>
        }
    </div>
</div>
