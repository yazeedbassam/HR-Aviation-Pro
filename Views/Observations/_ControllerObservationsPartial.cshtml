@model List<WebApplication1.Models.Observation>

@* Check if user has permission to view Controller Observations *@
@if (Html.HasAdvancedPermission("CONTROLLEROBSERVATION_VIEW") || Html.IsAdvancedAdmin())
{
<div class="card mt-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="fa-solid fa-plane"></i>
            Controller Observations
        </h5>
        <span class="badge bg-primary" id="controller-obs-counter">@(Model?.Count ?? 0) Records</span>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="controllerObsTable">
                    <thead class="table-dark">
                        <tr>
                            <th>Obs#</th>
                            <th>Controller</th>
                            <th>Flight No.</th>
                            <th>Country</th>
                            <th>Days</th>
                            <th>Depart Date</th>
                            <th>Return Date</th>
                            <th>File</th>
                            <th>Actions</th>
                        </tr>
                        <tr class="filters">
                            <th><input type="text" class="form-control form-control-sm filter-input" placeholder="Filter..." data-param-name="observationNo" data-column-index="0"></th>
                            <th><input type="text" class="form-control form-control-sm filter-input" placeholder="Filter..." data-param-name="personName" data-column-index="1"></th>
                            <th><input type="text" class="form-control form-control-sm filter-input" placeholder="Filter..." data-param-name="flightNo" data-column-index="2"></th>
                            <th><input type="text" class="form-control form-control-sm filter-input" placeholder="Filter..." data-param-name="country" data-column-index="3"></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th class="text-center">
                                <button class="btn btn-sm btn-outline-secondary clear-filters-btn" title="Clear Filters">
                                    <i class="fa-solid fa-eraser"></i>
                                </button>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var observation = Model[i];
                            <tr>
                                <td>
                                    @if (observation.TotalPreviousTrips == 0)
                                    {
                                        <span class="badge bg-success fw-medium" title="First Trip">
                                            <i class="fa-solid fa-star me-1"></i>1st
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info fw-medium" title="Previous Trips: @observation.TotalPreviousTrips">
                                            <i class="fa-solid fa-plane me-1"></i>@(observation.TotalPreviousTrips + 1)
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(observation.ControllerName))
                                    {
                                        <span class="fw-medium">@observation.ControllerName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(observation.FlightNo))
                                    {
                                        <span class="fw-medium">@observation.FlightNo</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(observation.TravelCountry))
                                    {
                                        <span class="badge bg-secondary">@observation.TravelCountry</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (observation.DurationDays.HasValue)
                                    {
                                        <span class="text-success fw-bold">@observation.DurationDays</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (observation.DepartDate.HasValue)
                                    {
                                        <span class="text-info">@observation.DepartDate.Value.ToString("dd/MM/yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (observation.ReturnDate.HasValue)
                                    {
                                        <span class="text-info">@observation.ReturnDate.Value.ToString("dd/MM/yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(observation.FilePath))
                                    {
                                        <a class="btn btn-outline-primary btn-sm" href="@Url.Content(observation.FilePath)" target="_blank" title="View File">
                                            <i class="fa-solid fa-file-pdf"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        @{
                                            // Dynamic permission checking for Controller Observation operations
                                            var canView = Html.HasAdvancedPermission("CONTROLLEROBSERVATION_VIEW");
                                            var canAdd = Html.HasAdvancedPermission("CONTROLLEROBSERVATION_ADD");
                                            var canEdit = Html.HasAdvancedPermission("CONTROLLEROBSERVATION_EDIT");
                                            var canDelete = Html.HasAdvancedPermission("CONTROLLEROBSERVATION_DELETE");
                                            
                                            // Log permissions for debugging
                                            System.Diagnostics.Debug.WriteLine($"🔍 Controller Observation Permissions - View:{canView}, Add:{canAdd}, Edit:{canEdit}, Delete:{canDelete}");
                                        }
                                        
                                        @* View Button - Only visible if user has view permission *@
                                        @if (canView || Html.IsAdvancedAdmin())
                                        {
                                            <button type="button" class="btn btn-info btn-sm" title="View Details"
                                                    data-bs-toggle="modal" data-bs-target="#observationDetailsModal"
                                                    data-person-name="@observation.ControllerName"
                                                    data-person-type="Controller"
                                                    data-obs-no="@observation.ObservationNo"
                                                    data-license-no="@observation.LicenseNumber"
                                                    data-flight-no="@observation.FlightNo"
                                                    data-country="@observation.TravelCountry"
                                                    data-duration="@observation.DurationDays"
                                                    data-depart-date="@observation.DepartDate?.ToString("yyyy-MM-dd")"
                                                    data-return-date="@observation.ReturnDate?.ToString("yyyy-MM-dd")"
                                                    data-notes="@observation.Notes">
                                                <i class="fa-solid fa-eye"></i>
                                            </button>
                                        }
                                        
                                        @* Edit Button - Only visible if user has edit permission *@
                                        @if (canEdit || Html.IsAdvancedAdmin())
                                        {
                                            <a asp-action="Edit" asp-route-id="@observation.ObservationId" class="btn btn-warning btn-sm" title="Edit">
                                                <i class="fa-solid fa-edit"></i>
                                            </a>
                                        }
                                        
                                        @* Delete Button - Only visible if user has delete permission *@
                                        @if (canDelete || Html.IsAdvancedAdmin())
                                        {
                                            <form method="post" asp-action="Delete" asp-route-id="@observation.ObservationId" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this observation?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger btn-sm" title="Delete">
                                                    <i class="fa-solid fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Export Buttons -->
            @if (Html.HasAdvancedPermission("CONTROLLEROBSERVATION_EXPORT") || Html.IsAdvancedAdmin())
            {
                <div class="mt-3 d-flex gap-2">
                    <button class="btn btn-danger btn-sm" onclick="exportToFile('Controller', 'ExportToPdf', 'pdf')">
                        <i class="fa-solid fa-file-pdf me-1"></i> Export PDF
                    </button>
                    <button class="btn btn-success btn-sm" onclick="exportToFile('Controller', 'ExportToExcel', 'xlsx')">
                        <i class="fa-solid fa-file-excel me-1"></i> Export Excel
                    </button>
                </div>
            }
        }
        else
        {
            <div class="text-center py-4">
                <i class="fa-solid fa-inbox fa-3x text-muted mb-3"></i>
                <p class="text-muted">No controller observations found.</p>
            </div>
        }
    </div>
</div>
}
else
{
    <div class="alert alert-warning">
        <i class="fa-solid fa-exclamation-triangle me-2"></i>
        You don't have permission to view Controller Observations.
    </div>
}
