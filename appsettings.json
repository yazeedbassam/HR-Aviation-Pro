{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "SqlServerDbConnection": "Server=${DB_SERVER};Database=${DB_NAME};Trusted_Connection=true;TrustServerCertificate=True;MultipleActiveResultSets=true;Connection Timeout=30;Command Timeout=30;",
    "MySqlDbConnection": "Server=${DB_SERVER};Port=${DB_PORT};Database=${DB_NAME};Uid=${DB_USER};Pwd=${DB_PASSWORD};CharSet=utf8mb4;Connection Timeout=30;Command Timeout=30;",
    "SupabaseConnection": "Host=${SUPABASE_HOST};Port=${SUPABASE_PORT};Database=${SUPABASE_DB};Username=${SUPABASE_USER};Password=${SUPABASE_PASSWORD};SSL Mode=Require;Trust Server Certificate=true;Timeout=60;"
  },
  "SupabaseSettings": {
    "Url": "${SUPABASE_URL}",
    "AnonKey": "${SUPABASE_ANON_KEY}",
    "ServiceRoleKey": "${SUPABASE_SERVICE_ROLE_KEY}"
  },
  "DatabaseSettings": {
    "DefaultDatabase": "Supabase",
    "AutoSwitch": true,
    "ConnectionTimeout": 30,
    "CommandTimeout": 30,
    "RetryCount": 3,
    "RetryDelay": 1000
  },
  "AllowedHosts": "*",
  "EmailSettings": {
    "SmtpServer": "${EMAIL_SMTP_SERVER}",
    "SmtpPort": "${EMAIL_SMTP_PORT}",
    "Username": "${EMAIL_USERNAME}",
    "Password": "${EMAIL_PASSWORD}",
    "FromEmail": "${EMAIL_FROM}",
    "FromName": "${EMAIL_FROM_NAME}",
    "EnableSsl": true,
    "Timeout": 30000,
    "MaxRetries": 3,
    "RetryDelay": 1000,
    "EnableLogging": true
  },
  "HealthChecks": {
    "Database": {
      "Enabled": true,
      "Timeout": 30
    }
  },
  "CacheSettings": {
    "EnableCache": true,
    "DefaultExpirationMinutes": 20,
    "MaxCacheSize": 1000,
    "EnableStatistics": true,
    "EnableLogging": true,
    "Permissions": {
      "Enabled": true,
      "ExpirationMinutes": 5,
      "SlidingExpiration": false,
      "MaxItems": 100
    },
    "Configuration": {
      "Enabled": true,
      "ExpirationMinutes": 30,
      "SlidingExpiration": false,
      "MaxItems": 200
    },
    "Menu": {
      "Enabled": true,
      "ExpirationMinutes": 10,
      "SlidingExpiration": false,
      "MaxItems": 50
    },
    "User": {
      "Enabled": true,
      "ExpirationMinutes": 15,
      "SlidingExpiration": false,
      "MaxItems": 100
    },
    "Reports": {
      "Enabled": true,
      "ExpirationMinutes": 60,
      "SlidingExpiration": false,
      "MaxItems": 50
    }
  }
}